<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="96dp"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_lang_item"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/lang_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lang_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#99339933"
                android:src="@drawable/ic_scan_toggle_off"
                />

            <TextView
                android:id="@+id/lang_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lang_image"
                android:textSize="16sp"
                tools:text="Language title"
                />

            <TextView
                android:id="@+id/level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lang_title"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/lang_image"
                android:textSize="12sp"
                tools:text="level"
                />

            <TextView
                android:id="@+id/learn_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lang_image"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="@string/learn_result"
                android:textSize="12sp"
                tools:text="1/10"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>